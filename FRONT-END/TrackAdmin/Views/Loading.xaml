<UserControl x:Class="TrackAdmin.Views.Loading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrackAdmin.Views"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Style="{StaticResource loadingBack}"></Border>
        <fa:ImageAwesome Icon="Spinner" Spin="True" SpinDuration="0.8" 
                         Foreground="{StaticResource cThree}" Style="{StaticResource loading}"/>
    </Grid>
</UserControl>
