<UserControl x:Class="TrackAdmin.Views.Users"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrackAdmin.Views"
             xmlns:v="clr-namespace:TrackAdmin.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Command="{Binding TestCommand}" VerticalAlignment="Center" HorizontalAlignment="Center">Click here to show loading...</Button>
        <v:Loading Visibility="{Binding IsLoading, Converter={StaticResource cVisibility}}"></v:Loading>
    </Grid>
</UserControl>
