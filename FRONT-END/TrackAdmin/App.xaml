<Application x:Class="TrackAdmin.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:TrackAdmin.Converters">
    <Application.Resources>
        <ResourceDictionary>
            
            <!--Converters:-->
            <c:BoolVisibilityConverter x:Key="cBoolVis" />
            <c:BoolVisibilityOppositeConverter x:Key="cBoolVisOpposite" />
            <c:StringVisibilityConverter x:Key="cStringVis" />
            <c:ConcatConverter x:Key="cConcat" />
            <c:IsNotNullConverter x:Key="cIsNotNull" />
            <c:IsNotEmptyOrPatternConverter x:Key="cIsNotEmptyOrPattern" />
            <c:BoolOppositeConverter x:Key="cBoolOpposite" />
            <c:DateConverter x:Key="cDate" />

            <!--Resource Dictionaries-->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/DefaultTheme/_Colors.xaml" />
                <ResourceDictionary Source="Resources/DefaultTheme/_Fonts.xaml" />
                <ResourceDictionary Source="Resources/DefaultTheme/_Dimensions.xaml" />
                <ResourceDictionary Source="Resources/DefaultTheme/_Templates.xaml" />
                <ResourceDictionary Source="Resources/DefaultTheme/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
